#!/bin/bash
set -e

. jgb-helper
jgb_arch=$(uname -p)

while getopts  "bBp:" opt; do
  case ${opt} in
    b)
      extra="-b"
      ;;
    B)
      extra="-B"
      ;;
    p)
      jgb_arch=$OPTARG
      ;;
    ?)
      ;;
  esac
done

for m in Debug Release
do
    jgb-build -Ri -p${jgb_arch} -t${m} -P $extra
done
